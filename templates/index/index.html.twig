{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    {{ dump() }}

    <div class="container">
        {% include '_menu.html.twig' %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        <div class="my-5">
            {% if form is defined %}
                {{ form_start(form) }}

                {{ form_widget(form) }}

                <button type="submit" class="btn btn-primary">
                    Enviar
                </button>

                {{ form_end(form) }}
            {% endif %}
        </div>

    </div>
{% endblock %}
