{% extends 'base.html.twig' %}

{% block title %}Hello{% endblock %}

{% block body %}
    {{ dump(form) }}

    <div class="container">
        <div class="card">
            <div class="card-body">

                <h2 class="card-title mb-5">Informaci√≥n de Despacho</h2>

                <div class="card-text">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}

                    <div class="form-row">
                        <div class="form-group col-md-2">
                            {{ form_errors(form.rut) }}
                            {{ form_label(form.rut) }}
                            {{ form_widget(form.rut) }}
                        </div>
                        <div class="form-group col-md-1">
                            <label style="visibility: hidden;">.</label>
                            {{ form_widget(form.dv) }}
                        </div>
                    </div>

                    {% for key, field in form.children %}
                        {% if key not in ['rut', 'dv'] %}                        
                            {{ form_row(field) }}
                        {% endif %}
                    {% endfor %}

                    <button type="submit" class="btn btn-primary">Enviar</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
